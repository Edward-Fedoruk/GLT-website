      section.service
        .container
          .row.justify-content-center
            .col-md-11
              .service__greeting
                p.service__hello What we do
                h2.service__name Weâ€™ve got everything you need to launch and grow your business

          -
            const serviceInfo = [
              [
                {name: 'Brand Identity', icon: 'fas fa-brush'}, 
                {name: 'Illustration',  icon: 'fas fa-brush'}
              ], 

              [
                {name: 'Marketing',  icon: 'fas fa-object-ungroup'}, 
                {name: 'Web Design',  icon: 'fas fa-globe-africa'}
              ], 

              [
                {name: 'Packaging Design',  icon: 'fas fa-cube'}, 
                {name: 'Web Development',  icon: 'fas fa-bullhorn'}
              ]
            ]

          each val, index in serviceInfo
            .row.justify-content-between
              each value in val
                .col-md-6 
                  .service__block
                    .service__icon
                      i(class=`${value.icon}`)
                    div.service__info
                      h2.service__sname #{value.name}
