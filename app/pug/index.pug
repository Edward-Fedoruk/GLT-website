      section.work
        .container
          .row.justify-content-center
            .col-md-11
              .service__greeting
                p.service__hello RECENT WORKS
                h2.service__name We love what we do, check out some of our latest works
      .work__content
        .container
          .work__lightgallery            
            a(class="work__galleryItem1" href="../img/portfolio/guitarist.jpg")
              img(src="../img/portfolio/guitarist.jpg")
