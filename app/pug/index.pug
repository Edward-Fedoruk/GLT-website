doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title GLT
    link(rel='stylesheet', type='text/css', href='css/main.min.css') 
  body
    .page
      section.mainHeader
        .mainHeader__overlay
        
        include ./components/header.pug

        .container 
          .row.justify-content-start
            .col-lg-1
            .col-lg-7
              .mainHeader__wrap
                h3.mainHeader__welcome welcome to glt 
                h1.mainHeader__head.
                  We are a creative group of people who design influential 
                  brands and digital experiences.
                .mainHeader__btnWrap
                  a.mainHeader__btn start a project
                  a.mainHeader__btn more about us

        include ./components/social.pug

        .mainHeader__scroll
          .mainHeader__scrollIcon
            i.fas.fa-angle-down 
            span scroll down 
          .mainHeader__line

      section.about

        .about__line

        .container
          .row.justify-content-center
            .col-md-7
              .about__greeting
                p.about__hello hello there
                h2.about__name we are glint

