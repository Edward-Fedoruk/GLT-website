doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title GLT
    link(rel='stylesheet', type='text/css', href='css/main.min.css') 
  body
    div(class="page")
      section(class="mainHeader")
        div(class="mainHeader__overlay")
        include ./components/header.pug

        div(class="container") 
          div(class="row justify-content-start")
            div(class="col-lg-1")
            div(class="col-lg-7")
              div(class="mainHeader__wrap")
                h3(class="mainHeader__welcome") welcome to glt 
                h1(class="mainHeader__head").
                  We are a creative group of people who design influential 
                  brands and digital experiences.
                div(class="mainHeader__btnWrap")
                  a(class="mainHeader__btn") start a project
                  a(class="mainHeader__btn") more about us

        include ./components/social.pug

        div(class="mainHeader__scroll")
          div(class="mainHeader__scrollIcon")
            i(class="fas fa-angle-down") 
            span scroll down
          div(class="mainHeader__line")

  script(src="./js/common.min.js")
      